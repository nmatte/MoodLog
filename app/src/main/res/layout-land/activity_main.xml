<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:id="@+id/landLeftSide"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_large_material"
            android:text="Mood level(s)"
            android:clickable="true"
            android:onClick="showMoodSelector"/>

        <com.nmatte.mood.moodlog.GraphColumnView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/moodPreview"/>

        <View style="@style/Divider"/>

        <com.nmatte.mood.moodlog.CustomNumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:max="3"
            custom:label="Anxiety 0-3"
            android:id="@+id/anxPicker"
            />

        <View style="@style/Divider"/>

        <com.nmatte.mood.moodlog.CustomNumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:max="3"
            custom:label="Irritability 0-3"
            android:id="@+id/irrPicker"
            />

        <View style="@style/Divider"/>

        <com.nmatte.mood.moodlog.CustomNumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:max="24"
            custom:defaultNum="8"
            custom:label="Hours slept"
            android:id="@+id/hoursPicker"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show info"
            android:onClick="showInfo"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:id="@+id/landRightSide"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medication"
            android:id="@+id/medTextView"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:choiceMode="multipleChoice"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />

    </LinearLayout>

</RelativeLayout>