<android.support.v4.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChartActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#FFFFFFFF"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:id="@+id/mainLayout">
            <fragment
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:name="com.nmatte.mood.chart.ChartLabelFragment"
                android:id="@+id/chartLabelFragment"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <fragment
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:name="com.nmatte.mood.chart.monthview.ChartMainFragment"
                    android:id="@+id/chartMainFragment"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.NavigationView
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navlist_header"
        app:menu="@menu/drawer"
        />


</android.support.v4.widget.DrawerLayout>