

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:text="Mood level(s)"
        android:clickable="true"
        android:onClick="showMoodSelector"/>





    <com.nmatte.mood.moodlog.GraphColumnView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/moodPreview"/>

    <View style="@style/Divider"/>

    <com.nmatte.mood.moodlog.CustomNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:max="3"
        custom:label="Anxiety 0-3"
        android:id="@+id/anxPicker"
        />

    <View style="@style/Divider"/>

    <com.nmatte.mood.moodlog.CustomNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:max="3"
        custom:label="Irritability 0-3"
        android:id="@+id/irrPicker"
        />

    <View style="@style/Divider"/>

    <com.nmatte.mood.moodlog.CustomNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:max="24"
        custom:defaultNum="8"
        custom:label="Hours slept"
        android:id="@+id/hoursPicker"
        />

    <View style="@style/Divider"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:id="@+id/medTextView"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="multipleChoice"
        android:clickable="true"
        android:layout_below="@+id/medTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show info"
        android:onClick="showInfo"/>






</LinearLayout>
