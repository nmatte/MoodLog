    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:text="Mood level(s)"
        android:clickable="true"
        android:onClick="showMoodSelector"/>



    <com.nmatte.mood.moodlog.GraphColumnView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/moodPreview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hours slept last night"
        android:id="@+id/hoursSleptLabel" />



    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hoursSleptSeekBar"
        android:max="24"
        android:progress="8"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/irritabilityLabel"
        android:text="Irritability"
        />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/irrSeekBar"
        android:max="3"
        android:layout_alignRight="@+id/anxietyLabel"
        android:layout_alignLeft="@+id/anxietyLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anxietyLabel"
        android:text="Anxiety"
        />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/anxSeekBar"
        android:max="3"
        android:layout_alignRight="@+id/anxietyLabel"
        android:layout_alignLeft="@+id/anxietyLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:id="@+id/medTextView"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="multipleChoice"
        android:clickable="true"
        android:layout_below="@+id/medTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show info"
        android:onClick="showInfo"/>






</LinearLayout>
