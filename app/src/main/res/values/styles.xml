<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#878787</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>


    <style name="BoolItemRow.TextView" parent="android:Widget.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:hint">Name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="LogbookItem.ImageButton_Add" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_add_black_48dp</item>
    </style>

    <style name="LogbookItem.ImageButton_Delete" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_delete_black_36dp</item>
    </style>

    <style name="LogbookItem.ImageButton_Save" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_save_black_36dp</item>
    </style>

    <style name="LogbookItem.ImageButton_Edit" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_create_black_36dp</item>
    </style>

    <style name="NumItem.EditNum" parent="android:Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
    </style>

    <style name="OptionsHeader" parent="android:Widget.TextView">
        <item name="android:background">#B7B7B7</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


</resources>
